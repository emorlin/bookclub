{
    "buildCommand": "vite build",
    "outputDirectory": "dist",
    "routes": [
        { "handle": "filesystem" },
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/.*", "dest": "/index.html" }
    ],

    "rewrites": [
        { "source": "/api/(.*)", "destination": "/api/$1" },
        { "source": "/((?!api|.*\\..*).*)", "destination": "/index.html" }
    ]
}
